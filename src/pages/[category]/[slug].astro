---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Sidebar from '../../components/Sidebar/Sidebar.astro';
import { getAllPosts } from '../../utils/getPosts';
import slugify from 'slugify';
import { getColor } from '../../utils/heroCategories';
import { resolveImagePath } from '../../utils/imagePath';
import { formatDateLong } from '../../utils/formatDate';
import { calculateReadingTime, getCategoryUrl } from '../../utils/postHelpers';
import type { Post } from '../../utils/getPosts';

interface Props {
  category: string;
  slug: string;
  post: Post;
}

export async function getStaticPaths() {
  const posts = await getAllPosts();
  
  return posts.map((post) => {
    const categorySlug = slugify(post.data.category, { lower: true });
    const postSlug = post.slug;
    
    return {
      params: {
        category: categorySlug,
        slug: postSlug,
      },
      props: {
        post,
      },
    };
  });
}

const { post } = Astro.props;
if (!post.render) {
  throw new Error(`Post "${post.slug}" is missing a render method. This indicates a problem with the content adapter.`);
}
const renderResult = await post.render();
const { Content } = renderResult;

const dateFormatted = formatDateLong(post.data.date);
const readingTimeMinutes = calculateReadingTime(post.readingTime.words);
const categoryColor = getColor(post.data.category);
const imageSrc = resolveImagePath(post.data.image);
const categoryUrl = getCategoryUrl(post.data.category);

const siteMetadata = {
  url: import.meta.env.SITE || 'https://yourdomain.com',
  title: 'Revista',
};

const postUrl = `${siteMetadata.url}${Astro.url.pathname}`;
const fullImageSrc = imageSrc ? (imageSrc.startsWith('http') ? imageSrc : `${siteMetadata.url}${imageSrc}`) : undefined;

// Structured data for articles
const articleStructuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "description": post.excerpt,
  "image": fullImageSrc ? [fullImageSrc] : undefined,
  "datePublished": post.data.date.toISOString(),
  "dateModified": post.data.date.toISOString(),
  "author": {
    "@type": "Organization",
    "name": siteMetadata.title
  },
  "publisher": {
    "@type": "Organization",
    "name": siteMetadata.title,
    "url": siteMetadata.url
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": postUrl
  },
  "articleSection": post.data.category,
  "wordCount": post.readingTime.words,
  "timeRequired": `PT${Math.ceil(readingTimeMinutes)}M`
};

// Breadcrumb structured data
const breadcrumbStructuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": siteMetadata.url
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": post.data.category,
      "item": `${siteMetadata.url}${categoryUrl}`
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": post.data.title,
      "item": postUrl
    }
  ]
};

const structuredData = [articleStructuredData, breadcrumbStructuredData];
---

<BaseLayout 
  title={post.data.title}
  description={post.excerpt}
  image={imageSrc}
  article={true}
  structuredData={structuredData}
>
  <section class="container" style="margin: 4rem auto;">
    <div class="row">
      <div class="col-2 display-none-on-sm-screen"></div>
      <div class="col-xl-7 col-12">
        <article class="article-content" style="margin-top: 3.4rem;">
          <h2>{post.data.title}</h2>
          
              {imageSrc && (
                <img 
                  src={imageSrc}
                  alt={post.data.title}
                  class="main-img"
                  style="width: 100%; max-width: 650px; display: block; margin: 0 auto;"
                />
              )}
          
          <div class="post-info" style="padding: 2rem 0 0.5rem; margin-bottom: 2rem; text-align: center;">
            <ul class="card-meta list-inline">
              <li class="list-inline-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                {readingTimeMinutes} Min Read
              </li>
              <li class="list-inline-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                {dateFormatted}
              </li>
              {post.data.imageAttribution && (
                <li class="list-inline-item">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                    <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                  </svg>
                  <a 
                    target="_blank"
                    rel="noopener noreferrer"
                    href={post.data.imageAttribution}
                    class="image-attribution-link"
                  >
                    Image Source
                  </a>
                </li>
              )}
              <li class="list-inline-item">
                <a
                  href={categoryUrl}
                  class="category-link"
                  style={`color: ${categoryColor}; background-color: ${categoryColor};`}
                >
                  <div class="category-text-color">{post.data.category}</div>
                </a>
              </li>
            </ul>
          </div>
          
          <div class="article-body">
            <Content />
          </div>
        </article>
      </div>
      <Sidebar />
    </div>
  </section>
</BaseLayout>
