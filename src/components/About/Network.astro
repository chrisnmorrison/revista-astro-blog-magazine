---
import { Image } from 'astro:assets';
import { AiOutlineDeploymentUnit } from 'react-icons/ai';
import undrawOpenSource from '../../assets/undraw_open_source.svg';
---

<section class="network-wrapper">
  <div class="container">
    <div class="row">
      <div class="section">
        <div class="about">
          <h5 class="subtitle">About Us</h5>
          <h2 class="network-section-title">
            Growing Network of Resources
          </h2>
          <p>
            Adaptogen skateboard schlitz viral edison bulb knausgaard shabby chic drinking vinegar semiotics cred occupy.
          </p>
          <p>Adaptogen skateboard schlitz viral edison bulb knausgaard shabby chic drinking vinegar semiotics cred occupy. Fit roof party ugh fanny pack ascot.</p>
        </div>
        <div class="picture">
          <Image
            src={undrawOpenSource}
            alt="Open Source Illustration"
            class="network-image"
          />
        </div>

        <div class="openmastery">
          <AiOutlineDeploymentUnit class="icon" client:load />
          <h3>Partner 1</h3>
          <p>
            Adaptogen skateboard schlitz viral edison bulb knausgaard shabby chic drinking vinegar semiotics cred occupy. Fit roof party ugh fanny pack ascot. Blog messenger bag you probably haven't heard of them distillery, vexillologist offal brunch leggings gentrify sustainable mumblecore pok pok polaroid pour-over big mood. 
          </p>
          <p>
            <a href="#" target="_blank" rel="noopener noreferrer">Check it out</a>
          </p>
        </div>
        <div class="openjournal">
          <AiOutlineDeploymentUnit class="icon" client:load />
          <h3>Partner 2</h3>
          <p>
            Adaptogen skateboard schlitz viral edison bulb knausgaard shabby chic drinking vinegar semiotics cred occupy.
          </p>
        </div>
        <div class="network-card">
          <div class="card-wrapper">
            <h3>Help us Grow</h3>
            <p>
              Contributing is very easy. If you share our vision, we'd love for you to help us grow.
            </p>
            <a href="/support-us" class="network-card-btn not-blue">
              How to Contribute
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .network-wrapper {
    margin-bottom: 5rem;
  }

  .network-wrapper .section {
    display: grid;
    width: 100%;
    grid-gap: 3rem;
    grid-template-rows: auto auto;
    grid-template-columns: 0.8fr 0.8fr 1fr 1fr;
    grid-template-areas:
      'about about about picture'
      'openmastery openmastery openjournal card';
    padding: 0;
    margin-bottom: 5rem;
  }

  .network-wrapper .card-wrapper p {
    padding: .7rem 0 .8rem 0;
  }

  .network-wrapper .subtitle {
    margin-bottom: .5rem;
    color: var(--primary-6);
  }

  .network-wrapper .about {
    grid-area: about;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  .network-wrapper .picture {
    grid-area: picture;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  .network-wrapper .network-image {
    max-width: 100%;
    height: auto;
  }

  .network-wrapper .openmastery {
    grid-area: openmastery;
  }

  .network-wrapper .openjournal {
    grid-area: openjournal;
  }

  .network-wrapper .network-card {
    grid-area: card;
    background-color: #ffd0b6;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 1rem 2rem;
    border-radius: 0.8rem;
    box-shadow: 0 10px 25px #ffd0b65f;
  }

  .network-wrapper .network-card-btn {
    border: 1px solid var(--grey-6);
    border-radius: 0.6rem;
    margin-top: .5rem;
    padding: 0.5rem 1.1rem;
    position: relative;
    text-decoration: none;
  }

  .network-wrapper .icon {
    background-color: var(--card-icon-bg);
    padding: 1rem;
    border-radius: 0.8rem;
    margin-bottom: 1rem;
    box-shadow: 0 10px 25px #b6eaff95;
    font-size: 1em;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .network-wrapper .icon svg {
    width: 1em;
    height: 1em;
  }

  @media screen and (max-width: 1199px) {
    .network-wrapper .network-card-btn {
      padding: 0.5rem 0.2rem;
    }
  }

  @media screen and (max-width: 991px) {
    .network-wrapper {
      text-align: center;
      margin-left: 5vw;
      margin-right: 5vw;
    }

    .network-wrapper .network-card-btn {
      padding: 0.5rem 1rem;
    }

    .network-wrapper .subtitle {
      font-size: 1.3rem;
    }

    .network-wrapper .section {
      grid-gap: 3rem;
      grid-template-rows: auto;
      grid-template-columns: 1fr;
      grid-template-areas:
        'about'
        'picture'
        'openmastery' 
        'openjournal'
        'card';
    }

    .network-wrapper .about {
      margin: 0;
      padding: 0;
    }

    .network-wrapper .network-card {
      padding: 2.5rem;
    }

    .network-wrapper .picture {
      margin-bottom: 2rem;
    }
  }
</style>
